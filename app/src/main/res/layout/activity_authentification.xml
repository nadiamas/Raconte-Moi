<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp"
    tools:context="com.example.benzait27.raconte_moi.Authentification">

    <TextView
        android:layout_width="wrap_content"
        android:text="Nom d'utilisateur"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etNomUtilisateur"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Mot de passe"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etMotDePasse"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bSoumettre"
        android:text="Soumettre"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvInscriptionLink"
            android:layout_width="wrap_content"
            android:text="S'inscrire"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvOubliInfoLink"
            android:layout_width="wrap_content"
            android:text="Informations oubliÃ©es"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
